<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navigator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/advice_page"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_collections_bookmark_24"
            app:layout_constraintBottom_toBottomOf="@+id/read"
            app:layout_constraintEnd_toStartOf="@+id/read"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/read" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐"
            android:textSize="10sp"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/advice_page"
            app:layout_constraintStart_toStartOf="@+id/advice_page"
            app:layout_constraintTop_toTopOf="@+id/practice_tv" />

        <ImageView
            android:id="@+id/read"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_contactless_24"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/practice_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="练习"
            android:textSize="10sp"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/read"
            app:layout_constraintStart_toStartOf="@+id/read"
            app:layout_constraintTop_toBottomOf="@+id/read" />

        <ImageView
            android:id="@+id/main_page"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_account_box_24"
            app:layout_constraintBottom_toBottomOf="@+id/read"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/read"
            app:layout_constraintTop_toTopOf="@+id/read" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主页"
            android:textSize="10sp"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/main_page"
            app:layout_constraintStart_toStartOf="@+id/main_page"
            app:layout_constraintTop_toTopOf="@+id/practice_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/main_activity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/navigator">

    </androidx.viewpager2.widget.ViewPager2>





</androidx.constraintlayout.widget.ConstraintLayout>


